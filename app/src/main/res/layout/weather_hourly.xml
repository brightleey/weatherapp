<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lc="http://schemas.android.com/apk/res/com.example.weatherapp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:id="@+id/wea_hourly_layout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wea_hourly"
        android:textColor="#ffffff"
        android:layout_marginLeft="10dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"
        android:alpha="0.2"
        android:layout_margin="10dp"
        ></View>

    <com.example.weatherapp.view.LineChart
        android:layout_width="match_parent"
        android:layout_height="120dp"
        lc:textSize="14sp"
        lc:circleRadius="3dp"
        lc:showYAxis="false"
        lc:axisTextColor="#ffffff"
        android:id="@+id/hourly_linechart"/>

</LinearLayout>